<div class="container">

    <h2 class="color-info"> Wishes</h2>
    <form action="/" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="Text" class="form-control" aria-describedby="title" name="title">
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input type="text" class="form-control" name="author" placeholder="author">
        </div>
        <div class="form-group">
            <label for="wish">Your Wish</label>
            <input type="textarea" class="form-control" name="wish" placeholder="wish">
        </div>
        <button type="submit" class="btn btn-primary mb-5">Submit</button>

    </form>

    <div class="wishes display-flex justify-content-around align-items-stretch">
        {{#each wishes}}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">Submitted by {{author}}</h6>
                <p class="card-text">{{wish}}</p>
                <form action="/delete/{{id}}" method="POST">
                <button class="btn btn-danger" onClick=>Delete</button>
                </form>
                 <form action="/edit/{{id}}" method="POST">
                <button class="btn btn-info" onClick=>Edit</button>
                </form>
            </div>
        </div>
        {{/each}}

    </div>

</div>